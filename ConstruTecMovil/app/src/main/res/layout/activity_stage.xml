<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView3" >

        <TabHost
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/selectView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="398dp"
                    android:layout_height="wrap_content"></TabWidget>

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#5f9c7f">

                    <LinearLayout
                        android:id="@+id/ProjectInfo"
                        android:layout_width="match_parent"
                        android:layout_height="524dp"
                        android:orientation="vertical"
                        android:gravity="center_vertical|center_horizontal"
                        android:weightSum="1"
                        android:background="#5f9c7f">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="0.09"
                            android:gravity="center"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PROJECT NAME"
                                android:id="@+id/projectNAME"
                                android:textSize="25dp"
                                android:layout_weight="0.21"
                                android:gravity="center_vertical|center_horizontal"
                                android:background="#b8d6bd" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="327dp"
                            android:layout_height="300dp"
                            android:layout_weight="0.71"
                            android:weightSum="1">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="301dp"
                                android:layout_height="39dp"
                                android:weightSum="1">

                                <TextView
                                    android:layout_width="107dp"
                                    android:layout_height="wrap_content"
                                    android:text="Start Date:"
                                    android:id="@+id/textView32"
                                    android:textSize="20dp"
                                    android:background="#b8d6bd" />

                                <Space
                                    android:layout_width="30px"
                                    android:layout_height="match_parent" />

                                <TextView
                                    android:layout_width="139dp"
                                    android:layout_height="wrap_content"
                                    android:text="Date"
                                    android:id="@+id/startDate"
                                    android:textIsSelectable="false"
                                    android:textSize="20dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:weightSum="1">

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text="End Date:"
                                    android:id="@+id/textView34"
                                    android:textSize="20dp"
                                    android:background="#b8d6bd" />

                                <Space
                                    android:layout_width="30px"
                                    android:layout_height="match_parent" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="New Text"
                                    android:id="@+id/endDate"
                                    android:textSize="20dp"
                                    android:layout_weight="0.23" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:weightSum="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Completed: "
                                    android:id="@+id/textView36"
                                    android:textSize="20dp"
                                    android:background="#b8d6bd" />

                                <Space
                                    android:layout_width="30px"
                                    android:layout_height="match_parent" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="True"
                                    android:id="@+id/completedStage"
                                    android:textSize="20dp"
                                    android:layout_weight="0.20" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="125dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Detalles:   "
                                    android:id="@+id/textView38"
                                    android:textSize="20dp"
                                    android:background="#b8d6bd" />

                                <Space
                                    android:layout_width="30px"
                                    android:layout_height="match_parent" />

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:id="@+id/detailStage"
                                    android:textSize="20dp"
                                    android:text="Descripcion"
                                    android:editable="true"
                                    android:enabled="true" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="38dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ubicación:  "
                                    android:id="@+id/textView40"
                                    android:textSize="20dp"
                                    android:background="#b8d6bd" />

                                <Space
                                    android:layout_width="30px"
                                    android:layout_height="match_parent" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ubicacion Aqui"
                                    android:id="@+id/ubicacionStage"
                                    android:textSize="20dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Comentarios:  "
                                    android:id="@+id/textView33"
                                    android:background="#b8d6bd"
                                    android:textSize="20dp" />

                                <Space
                                    android:layout_width="30px"
                                    android:layout_height="match_parent" />

                                <EditText
                                    android:layout_width="200dp"
                                    android:layout_height="106dp"
                                    android:id="@+id/commentText"
                                    android:textSize="20dp"
                                    android:gravity="top"
                                    android:background="#ffffff"
                                    android:editable="true"
                                    android:enabled="true" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical|center_horizontal">

                                <Button
                                    style="?android:attr/buttonStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:text="Actualizar"
                                    android:id="@+id/projectInfoButton"
                                    android:gravity="right" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="510dp"
                        android:id="@+id/addProducts"
                        android:background="#94ac96">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="83dp"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="52dp"
                                android:text="Productos"
                                android:id="@+id/textView35"
                                android:layout_weight="0.37"
                                android:textSize="20dp"
                                android:gravity="center_vertical|center_horizontal" />

                            <Spinner
                                android:layout_width="179dp"
                                android:layout_height="59dp"
                                android:id="@+id/productsSpinner"
                                android:gravity="start" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Cantidad: "
                                android:id="@+id/textView37"
                                android:layout_weight="0.20"
                                android:textSize="20dp"
                                android:gravity="center_vertical|center_horizontal" />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="phone"
                                android:ems="10"
                                android:id="@+id/addQuantityField"
                                android:layout_weight="0.37"
                                android:textSize="20dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="97dp"
                            android:gravity="center_vertical|center_horizontal"
                            android:weightSum="1">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Añadir"
                                android:id="@+id/addProductButton"
                                android:layout_weight="0.12"
                                android:textSize="25dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Products"
                        android:layout_width="match_parent"
                        android:layout_height="522dp"
                        android:orientation="vertical"
                        android:background="#b8d6bd">

                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#94ac96">

                            <ListView
                                android:layout_width="fill_parent"
                                android:layout_height="437dp"
                                android:id="@+id/productsList" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="76dp"
                                android:gravity="center_vertical|center_horizontal"
                                android:weightSum="1" >

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Comprar Etapa"
                                    android:id="@+id/button"
                                    android:textSize="25dp"
                                    android:background="#1eff00"
                                    android:layout_weight="0.16" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>
        </TabHost>
    </ScrollView>

</RelativeLayout>