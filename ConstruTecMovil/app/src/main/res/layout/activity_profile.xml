<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.epatec.construtecmovil.LoginActivity"
    android:background="#333333"
    android:gravity="center|fill">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:weightSum="1"
        android:background="#333333"
        android:gravity="center">

        <TextView
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:text="NAME"
            android:id="@+id/Name"
            android:layout_weight="0.05"
            android:textColor="#ffffff"
            android:textSize="40dp"
            android:gravity="center_vertical|center_horizontal" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25px" />

        <LinearLayout
            android:id="@+id/Profile"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:background="#0c2342"
            android:layout_weight="0.27">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="38dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text=" Nombre:"
                    android:id="@+id/textView8"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/userName"
                    android:textIsSelectable="true"
                    android:textColor="#fafafa" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="108dp"
                    android:layout_height="30dp"
                    android:text=" Apellido 1:"
                    android:id="@+id/textView9"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <EditText
                    android:layout_width="287dp"
                    android:layout_height="55dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/userLN1"
                    android:textColor="#ffffff" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text=" Apellido 2:"
                    android:id="@+id/textView10"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/userLN2"
                    android:textColor="#ffffff" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="99dp"
                    android:layout_height="match_parent"
                    android:text=" Usuario:"
                    android:id="@+id/textView11"
                    android:textSize="20dp"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="New Text"
                    android:id="@+id/userNick"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="25px" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="102dp"
                            android:layout_height="match_parent"
                            android:text=" Password:"
                            android:id="@+id/textView12"
                            android:textColor="#ffffff"
                            android:textSize="20dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:ems="10"
                            android:id="@+id/userPass"
                            android:textColor="#ffffff" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="59dp"
                            android:layout_height="match_parent"
                            android:text=" Tel:"
                            android:id="@+id/textView13"
                            android:textIsSelectable="false"
                            android:textSize="20dp"
                            android:textColor="#ffffff" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="phone"
                            android:ems="10"
                            android:id="@+id/userTel"
                            android:textColor="#ffffff" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:text=" E-mail:"
                            android:id="@+id/textView14"
                            android:textSize="20dp"
                            android:textColor="#ffffff" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:ems="10"
                            android:id="@+id/userMail"
                            android:textColor="#ffffff" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="67dp"
                        android:layout_height="match_parent"
                        android:text=" Tipo: "
                        android:id="@+id/textView26"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="PROFESION"
                        android:id="@+id/userRole"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20px" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="87dp"
                        android:layout_height="31dp"
                        android:text=" Código:"
                        android:id="@+id/textView27"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/userCode"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />

                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20px" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.38"
                android:weightSum="1">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:text="Actualizar"
                    android:id="@+id/updateProfile"
                    android:nestedScrollingEnabled="true" />
            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

    </LinearLayout>
</RelativeLayout>